<title>Registration of Hostel</title>
<link rel="shortcut icon" href="/images/logos/logo.png" type="image/x-icon" />
<link rel="stylesheet" href="/fonts/material-design-iconic-font.min.css" />


<link rel="stylesheet" href="/css/style2.css">
<div class="topnav">
  <a href="/views/index.ejs">Home</a>
  <a href="/users/login">Login</a>

</div>
<div class="wrapper" style="background-image: url('/images/home/1.jpg');">
  <div class="inner">
    <div class="image-holder">
      <img src="/images/home/main1.jpeg" height="700px" width="800px" alt="">
    </div>

    <form action="/husers/register" method="POST">
      <div class="container">
        <h1>Registeration form</h1>
        <p>Please fill in this form to create an account.</p>
        <hr>
        <%- include ("./partials/messages") -%>
        <div class="form-group">

          <input type="text" placeholder="Enter first name" name="fname" class="form-control" required>

          <input type="text" placeholder="Enter last name" name="lname" class="form-control" required>
        </div>

        <div class="form-wrapper">

          <input type="text" placeholder="Enter Address" name="address1" class="form-control" required>

        </div>

        <div class="form-wrapper">

          <input type="text" placeholder="Enter Address" name="address2" class="form-control" required>

        </div>

        <div class="form-wrapper">

          <input type=" text" placeholder="Enter City" name="city" class="form-control" required>


          <input type="text" placeholder="Enter State" name="state" class="form-control" required>



          <input type="number" placeholder="Pincode" name="pincode" class="form-control" required>
        </div>

        <div class="form-wrapper">

          <input type="text" placeholder="Enter Email" name="email" class="form-control" required>

        </div>

        <div class="form-wrapper">

          <input type="number" placeholder="Enter contact number" name="pnum" class="form-control" required>

        </div>

        <div class="form-wrapper">
          <input type="password" placeholder="Enter Password" name="password" class="form-control" required>


          <input type="password" placeholder="Renter Password" name="password2" class="form-control" required>
          <hr>
        </div>

        <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
        <button type="submit" class="registerbtn">Register</button>

      </div>

      <div class="container signin">
        <br>
        <p>Already have an account? <a href="/users/login">Sign in</a>.</p>
      </div>
    </form>
